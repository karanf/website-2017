*, *::before, *::after
    box-sizing border-box

html
    width 100%
    height 100%
    margin 0
    padding 0
    box-sizing border-box
    
body
    width 100%
    height 100%
    margin 0
    padding 0
    background $body-bg
    color $body-text-color
    font-family $body-font
    
h1
h2
h3
h4
h5
h6
    font-family $header-font
    font-weight $header-font-weight
    
main
    position absolute
    top 0
    right  0
    bottom 0
    left 0
    background transparent